{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Game Manifest Schema",
  "description": "Schema for game configuration files",
  "required": ["id", "title", "icon", "category", "entry", "languages"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier for the game"
    },
    "title": {
      "type": "object",
      "description": "Localized game titles",
      "patternProperties": {
        "^(ja|en)$": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": {
        "type": "string"
      },
      "minProperties": 1
    },
    "icon": {
      "type": "string",
      "format": "uri-reference",
      "description": "Path to game icon"
    },
    "category": {
      "type": "string",
      "enum": ["memory", "puzzle", "learning", "music"],
      "description": "Game category"
    },
    "description": {
      "type": "object",
      "description": "Localized game descriptions",
      "patternProperties": {
        "^(ja|en)$": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "entry": {
      "type": "string",
      "format": "uri-reference",
      "description": "Entry point URL for the game"
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["ja", "en"]
      },
      "minItems": 1,
      "uniqueItems": true,
      "description": "Supported languages"
    },
    "minAge": {
      "type": "number",
      "minimum": 1,
      "maximum": 18,
      "description": "Minimum recommended age"
    }
  },
  "additionalProperties": false
}
